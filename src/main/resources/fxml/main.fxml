<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.pomodoro.controller.MainController" 
      spacing="10" styleClass="main-container">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20" alignment="CENTER">
        <Label fx:id="timerLabel" styleClass="timer-label" text="25:00"/>
        <VBox spacing="5" alignment="CENTER">
            <Button fx:id="startButton" text="Start" onAction="#handleStartButton"/>
            <Button fx:id="pauseButton" text="Pause" onAction="#handlePauseButton"/>
            <Button fx:id="resetButton" text="Reset" onAction="#handleResetButton"/>
        </VBox>
    </HBox>

    <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="taskInput" promptText="Enter task name" HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="priorityComboBox" promptText="Priority"/>
            <Button text="Add Task" onAction="#handleAddTask"/>
        </HBox>
        
        <ListView fx:id="taskListView" VBox.vgrow="ALWAYS"/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Редагувати" onAction="#handleEditTask"/>
            <Button text="Видалити" onAction="#handleDeleteTask"/>
        </HBox>
    </VBox>

    <TabPane>
        <Tab text="Statistics">
            <VBox spacing="10">
                <Label text="Today's Progress"/>
                <ProgressBar fx:id="dailyProgress" progress="0.0"/>
                <Label text="Completed Pomodoros: "/>
                <Label fx:id="completedPomodorosLabel" text="0"/>
                <StackPane fx:id="chartContainer">
                    <LineChart fx:id="productivityChart">
                        <xAxis>
                            <CategoryAxis label="День"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Завершені помодоро"/>
                        </yAxis>
                    </LineChart>
                </StackPane>
            </VBox>
        </Tab>
        <Tab text="Settings">
            <GridPane vgap="10" hgap="10">
                <Label text="Work Duration (minutes):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Spinner fx:id="workDurationSpinner" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Short Break (minutes):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Spinner fx:id="shortBreakSpinner" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Dark Theme:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <CheckBox fx:id="darkThemeCheck" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>
        </Tab>
    </TabPane>
</VBox>
